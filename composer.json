{
  "name": "atsavalas/vacation-portal",
  "description": "Lightweight PHP Vacation Management Portal",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "Alexandros Tsavalas",
      "email": "altsavalas@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "bramus/router": "^1.6",
    "vlucas/phpdotenv": "^5.6",
    "catfan/medoo": "^2.1",
    "respect/validation": "^2.3",
    "twig/twig": "^3.0",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "bootstrap/helpers.php"
    ]
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^12.4"
  }
}
