{% extends "layout.twig" %}

{% block title %}Requests | {{ app_name }}{% endblock %}

{% block css %}
    <link href="css/simple-datatables.min.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Requests</h1>
            <a href="/requests/create" class="btn btn-primary">
                <i class="bi bi-calendar-plus"></i> New Request
            </a>
        </div>

        {% if flash.success or flash.error %}
            <div class="alert alert-dismissible fade show
              {{ flash.success ? 'alert-success' : 'alert-danger' }}"
                 role="alert">
                {{ flash.success ?? flash.error }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <table id="requests-table" class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                    <tr>
                        {% if auth_user.role == 'manager' %}
                            <th scope="col">User</th>
                        {% endif %}
                        <th scope="col">Date Submitted</th>
                        <th scope="col">Dates Requested</th>
                        <th scope="col">Reason</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for req in requests %}
                        <tr>
                            {% if auth_user.role == 'manager' %}
                                <td>{{ req.user.name }}</td>
                            {% endif %}
                            <td>{{ req.created_at|date("Y-m-d H:i:s") }}</td>
                            <td>{{ req.start_date|date("Y-m-d") }} - {{ req.end_date|date("Y-m-d") }} </td>
                            <td>{{ req.reason }}</td>
                            <td>
                                {% if req.status == 'approved' %}
                                    <span class="badge bg-success">Approved</span>
                                {% elseif req.status == 'rejected' %}
                                    <span class="badge bg-danger">Rejected</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">Pending</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                {% if auth_user.role == 'manager' %}
                                    {% if req.user_id != auth_user.id %}
                                        {% if req.status == 'pending' %}
                                            <form action="/requests/{{ req.id }}/approve" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-check-circle"></i> Approve
                                                </button>
                                            </form>
                                            <form action="/requests/{{ req.id }}/reject" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-x-circle"></i> Reject
                                                </button>
                                            </form>
                                        {% else %}
                                            <small class="text-muted">No actions</small>
                                        {% endif %}
                                    {% else %}
                                        <small class="text-muted">No actions</small>
                                    {% endif %}
                                {% elseif auth_user.role == 'employee' %}
                                    {% if req.status == 'pending' %}

                                        <form action="/requests/{{ req.id }}/delete" method="POST" class="d-inline"
                                              onsubmit="return confirm('Are you sure?');">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    {% else %}
                                        <small class="text-muted">No actions</small>
                                    {% endif %}

                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="{{ auth_user.role == 'manager' ? 6 : 5 }}" class="text-center text-muted py-4">
                                No requests found.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <script src="js/simple-datatables.min.js" type="text/javascript"></script>
    <script>
        (() => {
            const options = {
                searchable: true,
                fixedHeight: true,
                sortable: true,
                perPage: 25,
            };

            {% if auth_user.role == 'manager' %}
            options.columns = [
                { select: 5, sort: "asc" }
            ];
            {% endif %}

            const dataTable = new simpleDatatables.DataTable("#requests-table", options)
        })();
    </script>
{% endblock %}