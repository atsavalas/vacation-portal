{% extends "layout.twig" %}

{% import 'macros/forms.twig' as forms %}

{% block title %}Edit User | {{ app_name }}{% endblock %}

{% block content %}
    <div class="container mt-5 mb-5">

        <div class="row">
            <div class="col-8 offset-2">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h1 class="h4 mb-0">Edit User</h1>
                    </div>
                    <div class="card-body">

                        {% if flash.error %}
                            <div class="alert alert-danger">{{ flash.error | raw }}</div>
                        {% endif %}

                        {% include 'users/_form.twig' with {
                            action: '/users/' ~ user.id ~ '/update',
                            method: 'PUT',
                            button_text: 'Update User',
                            user: user
                        } %}

                    </div>
                </div>
            </div>
        </div>


    </div>
{% endblock %}

{% block scripts %}
    {{ forms.validationScript('#user-form') }}
{% endblock %}
